{
  "name": "pnpm-ts-rome-vitest-draft",
  "version": "1.0.0",
  "description": "PNPM Typescript Rome Vitest",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "rome check . --apply",
    "format": "rome format . --write",
    "fix": "pnpm format && pnpm lint",
    "check": "rome ci .",
    "typecheck": "tsc --noEmit",
    "build": "tsc --build",
    "build:force": "tsc --build --force",
    "test": "vitest run --no-threads",
    "test:faster": "vitest run --no-threads",
    "test:coverage": "vitest run --no-threads --coverage",
    "test:ui": "vitest --ui",
    "doc": "typedoc",
    "dev": "ts-node-esm dev/index.ts"
  },
  "keywords": [],
  "author_details": {
    "email": "jaspreetsing2379@gmail.com",
    "name": "Jaspreet Singh",
    "nickname": "jassi"
  },
  "author": "jassi",
  "coauthor": "ram",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@vitest/coverage-istanbul": "^0.29.8",
    "@vitest/ui": "^0.29.8",
    "husky": "^8.0.3",
    "rome": "^12.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.3",
    "vitest": "^0.29.8"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.1.0"
}